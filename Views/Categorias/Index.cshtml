@model IEnumerable<MvcCoreConciertos.Models.CategoriaEvento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-controller="Eventos" asp-action="EventosCategoria"
                    asp-route-id="@item.IdCategoria">
                    Eventos
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
